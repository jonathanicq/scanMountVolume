# =============================================================================
# scanMountVolume - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Mode
# -----------------------------------------------------------------------------
# Options: production, development
# - production: pulls from master branch, optimized settings
# - development: pulls from dev branch, debug enabled
APP_ENV=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=scanbot
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=scanmountvolume

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_SECRET_KEY=generate_a_secure_random_key_here
APP_HOST=0.0.0.0
APP_PORT=8056
APP_DEBUG=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_USERNAME=admin
AUTH_PASSWORD=change_this_password

# -----------------------------------------------------------------------------
# Scanning Configuration
# -----------------------------------------------------------------------------
SCAN_BATCH_SIZE=1000
SCAN_HASH_ALGORITHM=sha256
SCAN_WORKERS=4

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Options: json, text
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Git Configuration (for Docker auto-update)
# -----------------------------------------------------------------------------
GIT_REPO_URL=https://github.com/jonathanicq/scanMountVolume.git
# Branch is automatically selected based on APP_ENV:
# - production → master
# - development → dev
